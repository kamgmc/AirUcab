function eliminarModeloAvion($id){
		global $conexion;
		$qry = "DELETE FROM Modelo_avion where am_id=".$id;
		$qry2 = "DELETE FROM Distribucion where di_modelo_avion=".$id;
		$qry3 = "DELETE FROM Submodelo_avion where as_submodelo_avion=".$id;
		$qry4 = "DELETE FROM S_avion_m_motor where smt_avion in (Select di_id from Distribucion where di_modelo_avion=".$id.")";
		$qry5 = "DELETE FROM S_avion_m_pieza where smp_submodelo_avion in (Select as_id from Submodelo_avion where as_modelo_avion=".$id.")";
		$qry6 = "DELETE FROM Avion where a_distribucion in (Select di_id from Distribucion where di_modelo_avion=".$id.")";
		$qry7 = "DELETE FROM Avion where a_submodelo_avion in (Select as_id from Submodelo_avion where as_modelo_avion=".$id.")";
		$qry8 = "DELETE FROM Status_avion where sa_avion in (Select a_id from Avion, Distribucion where a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry9 = "DELETE FROM Pieza where p_avion in (Select a_id from Avion, Distribucion where a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry10 = "DELETE FROM Prueba_pieza where pp_pieza in (Select p_id from Pieza, Avion, Distribucion where p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry11 = "DELETE FROM Status_pieza where spi_pieza in (Select p_id from Pieza, Avion, Distribucion where p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry12 = "DELETE FROM Material where m_pieza in (Select p_id from Pieza, Avion, Distribucion where p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry13 = "DELETE FROM Prueba_material where prm_material in (Select m_id from Material, Pieza, Avion, Distribucion where m_pieza=p_id and p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry14 = "DELETE FROM Traslado where tr_material in (Select m_id from Material, Pieza, Avion, Distribucion where m_pieza=p_id and p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry15 = "DELETE FROM Traslado where tr_pieza in (Select p_id from Pieza, Avion, Distribucion where p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		if(pg_query($conexion, $qry15))
			if(pg_query($conexion, $qry14))
				if(pg_query($conexion, $qry13))
					if(pg_query($conexion, $qry12))
						if(pg_query($conexion, $qry11))
							if(pg_query($conexion, $qry10))
								if(pg_query($conexion, $qry9))
									if(pg_query($conexion, $qry8))
										if(pg_query($conexion, $qry7))
											if(pg_query($conexion, $qry6))
												if(pg_query($conexion, $qry5))
													if(pg_query($conexion, $qry4))
														if(pg_query($conexion, $qry3))
															if(pg_query($conexion, $qry2))
																return pg_query($conexion, $qry);
	}

	function eliminarDistribucion($id){
		global $conexion;
		$qry = "DELETE FROM Distribucion where di_modelo_avion=".$id;
		$qry2 = "DELETE FROM Avion where a_distribucion in (Select di_id from Distribucion where di_modelo_avion=".$id.")";
		$qry3 = "DELETE FROM Status_avion where sa_avion in (Select a_id from Avion, Distribucion where a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry4 = "DELETE FROM Pieza where p_avion in (Select a_id from Avion, Distribucion where a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry5 = "DELETE FROM Prueba_pieza where pp_pieza in (Select p_id from Pieza, Avion, Distribucion where p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry6 = "DELETE FROM Status_pieza where spi_pieza in (Select p_id from Pieza, Avion, Distribucion where p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry7 = "DELETE FROM Material where m_pieza in (Select p_id from Pieza, Avion, Distribucion where p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry8 = "DELETE FROM Prueba_material where prm_material in (Select m_id from Material, Pieza, Avion, Distribucion where m_pieza=p_id and p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry9 = "DELETE FROM Traslado where tr_material in (Select m_id from Material, Pieza, Avion, Distribucion where m_pieza=p_id and p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry10 = "DELETE FROM Traslado where tr_pieza in (Select p_id from Pieza, Avion, Distribucion where p_avion=a_id and a_distribucion=di_id and di_modelo_avion=".$id.")";
		$qry11 = "DELETE FROM Prueba_pieza where pp_pieza in (Select p_id from Pieza, Avion, Factura_venta, Cliente where p_avion=a_id and a_factura_venta=fv_id and fv_cliente=".$id.")";
					if(pg_query($conexion, $qry11))
						if(pg_query($conexion, $qry10))
							if(pg_query($conexion, $qry9))
								if(pg_query($conexion, $qry8))
									if(pg_query($conexion, $qry7))
										if(pg_query($conexion, $qry6))
											if(pg_query($conexion, $qry5))
												if(pg_query($conexion, $qry4))
													if(pg_query($conexion, $qry3))
														if(pg_query($conexion, $qry2))
															return pg_query($conexion, $qry);
	}

	function eliminarSubmodeloAvion($id){
